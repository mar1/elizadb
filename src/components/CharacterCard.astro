---
import type { Character } from "../types/character";

interface Props {
  character: Character;
}

const { character } = Astro.props;
---

<div
  class="border rounded-lg p-6 shadow-sm hover:shadow-md transition bg-white dark:bg-gray-800 dark:border-gray-700"
>
  <a
    href={`${import.meta.env.BASE_URL}/characters/${character.id}`}
    class="text-2xl font-bold mb-2 text-gray-900 dark:text-white h2"
  >
    {character.name}
  </a>
  <div class="mb-4">
    <p class="text-gray-600 dark:text-gray-300">{character.bio[0]}</p>
  </div>
  <div class="flex flex-wrap gap-2 mb-4">
    {
      character.adjectives?.map((adjective) => (
        <a
          href={`${import.meta.env.BASE_URL}/adjective/${adjective.toLowerCase().replace(/\s+/g, "-")}`}
          class="bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-100 px-2 py-1 rounded-full text-sm"
        >
          {adjective}
        </a>
      ))
    }
  </div>
  <a
    href={`${import.meta.env.BASE_URL}/characters/${character.id}`}
    class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300"
  >
    View Details â†’
  </a>
</div>
